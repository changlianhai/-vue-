/*挖矿中-比特币*/
#mn_miner,#mn_main,#mn_details{
	width:100%;
	height:23rem;
	background-color:#333;
	background-image:url(../../img/mining-bg2@3x.jpg);
	background-repeat:no-repeat;
	background-size:100% auto;
}
#mn_main{
	height:34rem;
	background-image:url(../../img/mining-bg1@3x.jpg);
}

.hl-mn-btc-bg{
	color:#ffdb43;
}
.hl-mn-btc-bg strong{
	font-size:3.2rem;
	font-weight:normal;
	vertical-align:middle;
}
.hl-mn-btc-total{
	padding-bottom:1rem;
}
.hl-mn-btc-total span{
	margin-left:.5rem;
	vertical-align:-.4rem;
}
#temp_main .hl-mn-btc-bg{
	height:28.5rem;
}
#mn_miner .hl-mn-btc-bg,#mn_details .hl-mn-btc-bg{
	height:17.5rem;
}
.addup{
	padding:1rem 2rem;
}
#temp_main .bg-wrap{
  height:calc(100% - 34rem);
}
#temp_details .bg-wrap{
  height:calc(100% - 24rem);
}

/*列表样式*/
.hl-mn-list-group{
	display:flex;
	flex-direction:column;
	word-wrap:break-word;
	background-color:#fff;
	background-clip:border-box;
}
.hl-mn-list-group li,.hl-mn-list-group dl{
	position:relative;
	flex:1 1 100%;
	width:calc(100% - 2rem);
	margin-left:2rem;
	padding:1.1rem 2rem 1.1rem 0;
	border-bottom:1px solid #eee;
}
.hl-mn-list-group span{
	color:#999;
}
.hl-mn-list-group .address{
	/*font-size:1.2rem;*/
}
.hl-mn-list-group dt{
	float:left;
	color:#999;
}
.hl-mn-list-group dd{float:right;}


/*提币列表*/
.hl-mn-btc-list span{
	float:right;
	font-size:1.2rem;
	margin-top:.3rem;
}

/*详情列表*/
.hl-mn-more-list a{
	display: block;
	color:inherit;
}
.hl-mn-details-list i{
	margin-left:1rem;
}
.hl-mn-withdraw-list strong,.record-btc strong{
	margin-right:.5rem;
	font-size:2rem;
	font-weight:500;
}
.hl-wd-record-list dt,.hl-wd-record-list dd{
	float:none;
	color:#333;
}
.hl-wd-record-list dt{
	margin-bottom:1.5rem;
}
.record-btc{
	float:right;
	color:#00a0e9;
}
.success-ico{
	padding:5rem 2rem;
}



/*矿机列表*/
#temp_miner .bg-wrap{
  height:calc(100% - 24rem);
}
.hl-mn-miner-list li{
	padding-top:1.5rem;
	padding-bottom:1.5rem;
}
.hl-mn-miner-list sup{
	top:0;
	display:inline-block;
	width:5.5rem;
	height:2.6rem;
	margin-left:1rem;
	color:#999;
	text-align:center;
	line-height:2.6rem;
	background-repeat:no-repeat;
	background-size:100% auto;

}
.hl-mn-miner-list sup.active{
	width:4.5rem;
	color:#333;
	background-image:url(../../img/active-bg@3x.png);

}
.hl-mn-miner-list sup.inactive{
	background-image:url(../../img/inactive-bg@3x.png);

}
.hl-mn-miner-list p{
	margin-top:1rem;
	color:#999;
}

/*矿机状态*/
.hl-mn-miner-state-list{
	display: flex;
    flex-flow: row wrap;
    padding-top:.8rem;
}
.hl-mn-miner-state-list dl{
	position:relative;
	flex: 1 0 0%;
}
.hl-mn-miner-state-list dl:after{
    content: ''; 
    position: absolute;
    right:0;
    top:50%;
    transform:translate(0,-50%);
    height: 1.5rem;
    border-right: 1px solid #999;
}
.hl-mn-miner-state-list dl:last-child:after{
    border-right: 1px solid transparent;
}
.hl-mn-miner-state-list dt{
	font-size:1.7rem;
}
.hl-mn-miner-state-list dd{
	color:#999;
	font-size:1.2rem;
}

/*挖矿开关h标签下样式*/
.hl-mn-h-switch span{
	display:inline-block;
	margin:0 .5rem;
}
.hl-mn-h-switch i{
	margin-right:.5rem;
}

.noActive {
	color:#00a0e9;
}
.mt-loadmore-area {
	height: 100%;
	overflow: scroll;
}

.miner-start {
	background-color: #00a0e9;
	color: #fff;
}

.hl-list {
	position: absolute;
	width:100%;
	top:5.5rem;
	overflow-y: scroll;
	height: calc(100% - 5.5rem);
}

/*挖矿攻略*/
.hl-strategy-bg{
	height:129rem;
	background-image:url(../../img/strategy-bg@3x.jpg);
	background-repeat:no-repeat;
	background-size:100% auto;
}
.hl-strategy-tit{
	height:25rem;
	background-image:url(../../img/strategy-tit@3x.png);
	background-repeat:no-repeat;
	background-position:center top;
	background-size:96% auto;

}
.hl-strategy-con{
	position:relative;
	top:-7.5rem;
}
.hl-strategy-con dl{
	position:relative;
	background-position:center center;
	background-repeat:no-repeat;
	background-size:100% auto;
}
.hl-strategy-con dl:after{
	content:'';
    position: absolute;
    left:50%;
    bottom:-5.5rem;
    transform:translate(-50%,0);
    width: 2rem;
    height: 4rem;
    background-image:url(../../img/strategy-arrow@3x.png);
	background-repeat:no-repeat;
	background-size:100% auto;
}
.hl-strategy-con dl:last-child:after{
	bottom:0;
    background-image:none;
}
.hl-strategy-con dt{
	position:absolute;
	z-index:5;
	height:3.2rem;
	padding-left:2rem;
	padding-right:2rem;
	color:#fff;
	font-size:1.6rem;
	line-height:3.2rem;
	background-repeat:no-repeat;
	background-size:100% auto;
}
.hl-strategy-con dd{
	position:absolute;
	bottom:.7rem;
	left:1.1rem;
	right:1.1rem;
	padding:3.8rem 2rem 0;
	font-size:1.4rem;
	border-radius:.5rem;
}

.hl-strategy-con dl:nth-of-type(1){
	height:10rem;
	margin-bottom:8.5rem;
	background-image:url(../../img/strategy-txt-bg1@3x.png);
}
.hl-strategy-con dl:nth-of-type(1) dt{
	left:1.5rem;
	top:-1rem;
	background-image:url(../../img/strategy-tit-bg1@3x.png);
}
.hl-strategy-con dl:nth-of-type(1) dd{
	height:9.5rem;
	color:#a4d4ff;
	background-color:rgba(79,1,198,.8);
}

.hl-strategy-con dl:nth-of-type(2){
	height:10.7rem;
	margin-bottom:10.5rem;
	background-image:url(../../img/strategy-txt-bg2@3x.png);
}
.hl-strategy-con dl:nth-of-type(2) dt,
.hl-strategy-con dl:nth-of-type(4) dt{
	left:50%;
	transform:translate(-50%,0);
	text-align:center;
	border-radius:.5rem;
}
.hl-strategy-con dl:nth-of-type(2) dt{
	top:-2.2rem;
	width:84%;
	background-color:rgba(106,103,255,.8);
}
.hl-strategy-con dl:nth-of-type(2) dd{
	height:11.5rem;
	color:#e1c3ff;
	background-color:rgba(1,30,198,.8);
}

.hl-strategy-con dl:nth-of-type(3){
	height:13rem;
	margin-bottom:10.5rem;
	background-image:url(../../img/strategy-txt-bg3@3x.png);
}
.hl-strategy-con dl:nth-of-type(3) dt{
	right:1.5rem;
	top:-4.5rem;
	background-image:url(../../img/strategy-tit-bg3@3x.png);
}
.hl-strategy-con dl:nth-of-type(3) dd{
	height:16rem;
	color:#f2e4ff;
	background-color:rgba(156,49,255,.8);
}

.hl-strategy-con dl:nth-of-type(4){
	height:14.5rem;
	margin-bottom:11rem;
	background-image:url(../../img/strategy-txt-bg4@3x.png);
}
.hl-strategy-con dl:nth-of-type(4) dt{
	top:-4.7rem;
	width:60%;
	background-color:rgba(96,209,255,.8);
}
.hl-strategy-con dl:nth-of-type(4) dd{
	height:17.5rem;
	color:#d8faff;
	background-color:rgba(48,105,255,.8);
}

.hl-strategy-con dl:nth-of-type(5){
	height:20rem;
	background-image:url(../../img/strategy-txt-bg5@3x.png);
}
.hl-strategy-con dl:nth-of-type(5) dt{
	left:1.5rem;
	top:-5rem;
	background-image:url(../../img/strategy-tit-bg5@3x.png);
}
.hl-strategy-con dl:nth-of-type(5) dd{
	height:23.5rem;
	color:#f7d1ff;
	background-color:rgba(113,0,255,.8);
}






