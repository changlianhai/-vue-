/**可拖拽弹窗样式**/
.hide {
	display: none!important;
}
.popup-bg{
	position:fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 0;
	display: block;
	overflow: hidden;
	outline: 0;
	width:100%;
	height:100%;
	background:rgba(0, 0, 0, 0.5);
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#4B000000,endColorstr=#4B000000);
}
:root .pop-bg{filter:none;}
.popup-dialog{
	padding: 1rem 0 2rem 0 ;
	position:absolute;
	top:20%;
	left:50%;
	width:85%;
	max-width:30rem;
	transform:translate(-50%,0);
	background:#f2f2f3;
    -webkit-border-radius: .5rem;
       -moz-border-radius: .5rem;
            border-radius: .5rem;
}
.popup-header{
    position: relative;
    padding:1rem 0;
    text-align: center;
    border-bottom:1px solid #e1e1e1;
}
.popup-model-close {
    position: absolute;
    right: 1rem;
    top:.2rem;
    transform: translate(0, -30%);
    font-size: 2.6rem;
    color:#999;
}
.popup-body{

}
.popup-info {
    margin: 0 1.5rem;
    padding: 2rem 0;
    text-align: center;
    border-bottom:1px solid #e1e1e1;
}
.popup-info strong {
	display:block;
	margin-top:.5rem;
    font-size:3.2rem;
    font-weight:normal;
}
.popup-info-tel {
	padding-top:1.5rem;
	text-align: center;
}

.popup-info-tel-check {
	padding:1rem 0;
	display: flex;
	display: -webkit-flex;
	justify-content: center;
}
.popup-info-tel-check input {
	width:4rem;
	height: 4rem;
	border:1px solid #ccc;
	text-align: center;

}
.popup-info-tel-check input:nth-of-type(odd) {
	border-right: none;
}
input.no-right-border {
	border-right:none;
}

.pop_tips_content li {
	padding: .7rem 1.2rem;
	font-size:1.2rem;
}




































































